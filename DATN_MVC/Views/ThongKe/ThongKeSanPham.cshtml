@model DATN_MVC.Models.Modeltong


@{
	Layout = "~/Views/Shared/Admin.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Thống kê Doanh thu</title>
	<link rel="stylesheet" href="styles.css">
	<style>
		/* Cấu trúc chung của trang */
		body {
			font-family: Arial, sans-serif;
			background-color: #f4f4f9;
			margin: 0;
			padding: 0;
		}

		.container {
			width: 80%;
			margin: 0 auto;
			padding-top: 50px;
			background-color: #fff;
			box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
			padding: 20px;
		}

		h2 {
			text-align: center;
			color: #333;
		}

		/* Form thống kê */
		.form-thong-ke {
			display: flex;
			flex-direction: column;
			gap: 15px;
			margin-bottom: 20px;
		}

			.form-thong-ke label {
				font-size: 14px;
				color: #555;
			}

			.form-thong-ke input,
			.form-thong-ke select,
			.form-thong-ke button {
				padding: 10px;
				font-size: 14px;
				border: 1px solid #ccc;
				border-radius: 5px;
			}

			.form-thong-ke button {
				background-color: #4CAF50;
				color: white;
				border: none;
				cursor: pointer;
			}

				.form-thong-ke button:hover {
					background-color: #45a049;
				}

		/* Bảng kết quả */
		.result-table {
			margin-top: 30px;
			overflow-x: auto;
		}

		table {
			width: 100%;
			border-collapse: collapse;
			margin: 20px 0;
			background-color: #fff;
			box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
		}

		th, td {
			text-align: center;
			padding: 12px;
			border: 1px solid #ddd;
		}

		th {
			background-color: #f2f2f2;
			color: #333;
		}

		td {
			color: #555;
		}

		tr:nth-child(even) {
			background-color: #f9f9f9;
		}

		tr:hover {
			background-color: #f1f1f1;
		}

	</style>
</head>
<body>
	<form asp-controller="ThongKe" asp-action="DoanhThuTheoKhoang" method="post" class="form-thong-ke">
    <div class="container">
        <h2>Thống kê Doanh thu</h2>

        <div>
            <label for="tuNgay">Từ ngày:</label>
            <input type="date" id="tuNgay" name="tuNgay" required value="@ViewBag.TuNgay" />
        </div>

        <div>
            <label for="denNgay">Đến ngày:</label>
            <input type="date" id="denNgay" name="denNgay" required value="@ViewBag.DenNgay" />
        </div>

        <div>
            <label for="thongKeTheo">Thống kê theo:</label>
            <select id="thongKeTheo" name="thongKeTheo">

            </select>
        </div>

        <div>
            <button type="submit">Thống kê</button>
        </div>

        <!-- Bảng kết quả -->
        <div class="result-table" style="margin-top: 30px;">
            @if (Model?.ThongKeNgays != null && Model.ThongKeNgays.Any())
            {
                <table border="1" cellpadding="10">
                    <thead>
                        <tr>
                            <th>thời gian</th>
                            <th>Tổng doanh thu</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.ThongKeNgays)
                        {
                            <tr>
                                <td>@item.Ngay.ToString("yyyy-MM-dd")</td>
                                <td>@item.TongDoanhThu.ToString("N0")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Không có dữ liệu để hiển thị.</p>
            }
        </div>
    </div>
</form>

</body>
</html>
