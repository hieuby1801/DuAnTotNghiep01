@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
@section Styles {
    <style>
        .table-container {
            background: #fff;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 6px 12px rgba(0,0,0,0.08);
            max-width: 1200px; /* To hơn */
            margin: 40px auto;
            overflow-x: auto;
        }

            .table-container h2 {
                text-align: center;
                margin-bottom: 30px;
                font-size: 28px; /* To hơn */
                color: #2c3e50;
                font-weight: bold;
            }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 16px 20px; /* Tăng padding */
            border-bottom: 1px solid #ddd;
            text-align: center;
            font-size: 16px; /* To hơn */
        }

        th {
            background-color: #f4f6f9;
            font-weight: 700; /* Đậm hơn */
            color: #2c3e50;
            font-size: 17px;
        }

        .update-btn {
            background: linear-gradient(to right, #2980b9, #3498db);
            color: #fff;
            border: none;
            padding: 10px 20px; /* To hơn */
            border-radius: 25px;
            font-weight: bold;
            cursor: pointer;
            transition: background 0.3s ease;
            font-size: 15px;
        }

            .update-btn:hover {
                background: linear-gradient(to right, #2471a3, #2980b9);
            }
    </style>
}

