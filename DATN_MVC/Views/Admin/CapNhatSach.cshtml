@model DATN_MVC.Models.Modeltong
@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Cập nhật thông tin sách</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: 'Inter', sans-serif;
      background: #f6f8fa;
      padding: 40px 20px;
    }

    .form-container {
      background: #fff;
      padding: 40px;
      border-radius: 20px;
      max-width: 900px;
      margin: auto;
      box-shadow: 0 15px 35px rgba(0, 0, 0, 0.07);
    }

    h2 {
      text-align: center;
      color: #111827;
      font-size: 28px;
      margin-bottom: 32px;
    }

    form {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 24px;
    }

    .form-group,
    .form-group-full {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .form-group-full {
      grid-column: 1 / 3;
    }

    label {
      font-weight: 600;
      color: #374151;
      font-size: 15px;
    }

    input[type="text"],
    input[type="number"],
    input[type="file"],
    textarea,
    select {
      padding: 12px 14px;
      border-radius: 10px;
      border: 1px solid #d1d5db;
      background-color: #f9fafb;
      font-size: 15px;
      transition: 0.3s;
    }

    input:focus,
    textarea:focus,
    select:focus {
      outline: none;
      border-color: #6366f1;
      background-color: #fff;
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.2);
    }

    textarea {
      resize: vertical;
      min-height: 100px;
    }

    .genre-options {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
      gap: 10px;
    }

    .genre-options label {
      display: flex;
      align-items: center;
      gap: 8px;
      background: #f3f4f6;
      padding: 8px 12px;
      border-radius: 8px;
      font-weight: 500;
      cursor: pointer;
      transition: 0.2s;
    }

    .genre-options input[type="checkbox"] {
      accent-color: #4f46e5;
      transform: scale(1.1);
    }

    button {
      grid-column: 1 / 3;
      padding: 14px;
      font-size: 16px;
      background: linear-gradient(135deg, #4f46e5, #6366f1);
      color: #fff;
      font-weight: 600;
      border: none;
      border-radius: 12px;
      cursor: pointer;
      transition: background 0.3s;
    }

    button:hover {
      background: linear-gradient(135deg, #4338ca, #4f46e5);
    }

  

      .form-group-full {
        grid-column: 1 / 2;
      }

      button {
        grid-column: 1 / 2;
      }
    }
  </style>
</head>
<body>

  <div class="form-container">
    <h2>Cập nhật thông tin sách</h2>
    <form>
      <div class="form-group">
        <label for="title">Tên sách</label>
        <input type="text" id="title" name="title">
      </div>

      <div class="form-group">
        <label for="author">Tác giả</label>
        <input type="text" id="author" name="author">
      </div>

      <div class="form-group">
        <label for="image">Hình ảnh</label>
        <input type="file" id="image" name="image">
      </div>

      <div class="form-group">
        <label for="status">Trạng thái</label>
        <select id="status" name="status">
          <option value="available">Còn hàng</option>
          <option value="out-of-stock">Hết hàng</option>
        </select>
      </div>

      <div class="form-group">
        <label for="language">Ngôn ngữ</label>
        <input type="text" id="language" name="language">
      </div>

      <div class="form-group">
        <label for="size">Kích thước</label>
        <input type="text" id="size" name="size" placeholder="VD: 14 x 20.5 cm">
      </div>

      <div class="form-group">
        <label for="weight">Trọng lượng</label>
        <input type="number" id="weight" name="weight">
      </div>

      <div class="form-group">
        <label for="pages">Số trang</label>
        <input type="number" id="pages" name="pages">
      </div>

      <div class="form-group">
        <label for="format">Hình thức</label>
        <input type="text" id="format" name="format" placeholder="VD: Bìa mềm">
      </div>

      <div class="form-group">
        <label for="age">Độ tuổi</label>
        <input type="text" id="age" name="age" placeholder="VD: 12+">
      </div>

      <div class="form-group-full">
        <label>Thể loại</label>
        <div class="genre-options">
          <label><input type="checkbox" name="genre" value="Trinh thám"> Trinh thám</label>
          <label><input type="checkbox" name="genre" value="Lãng mạn"> Lãng mạn</label>
          <label><input type="checkbox" name="genre" value="Khoa học"> Khoa học</label>
          <label><input type="checkbox" name="genre" value="Thiếu nhi"> Thiếu nhi</label>
          <label><input type="checkbox" name="genre" value="Học đường"> Học đường</label>
          <label><input type="checkbox" name="genre" value="Giáo dục"> Giáo dục</label>
        </div>
      </div>

      <div class="form-group-full">
        <label for="description">Mô tả</label>
        <textarea id="description" name="description" rows="4"></textarea>
      </div>

      <button type="submit">Cập nhật</button>
    </form>
  </div>

</body>
</html>
