@model DATN_MVC.Models.Modeltong
@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Cập nhật thông tin sách</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
            margin-top: 60px;
        }

        .form-label {
            font-weight: 500;
        }

        h2 {
            font-weight: bold;
            color: #343a40;
            margin-bottom: 30px;
            text-align: center;
        }

        .btn-primary {
            border-radius: 10px;
            padding: 10px 25px;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>📚 Cập nhật thông tin sách</h2>
        <form asp-action="CapNhatSach" asp-controller="Admin" method="post" enctype="multipart/form-data">
            <div class="row mb-4">
                <div class="col-md-2">
                    <label asp-for="ThemSachDto.MaSach" class="form-label">Mã sách</label>
                    <input asp-for="ThemSachDto.MaSach" class="form-control rounded-3" required value="@Model.ThemSachDto.MaSach" />
                </div>
                <div class="col-md-6">
                    <label asp-for="ThemSachDto.TenSach" class="form-label">Tên sách</label>
                    <input asp-for="ThemSachDto.TenSach" class="form-control rounded-3" required value="@Model.ThemSachDto.TenSach" />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.TacGia" class="form-label">Tác giả</label>
                    <input asp-for="ThemSachDto.TacGia" class="form-control rounded-3" required value="@Model.ThemSachDto.TacGia" />
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-8">
                    <label class="form-label">Hình Ảnh</label>
                    <input class="form-control rounded-3" type="file" name="HinhAnhFile" accept="image/*"/>
                    <input asp-for="ThemSachDto.HinhAnh" class="form-control rounded-3" value="@Model.ThemSachDto.HinhAnh" hidden/>

                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.TrangThai" class="form-label">Trạng thái</label>
                    <select asp-for="ThemSachDto.TrangThai" class="form-select rounded-3" required>
                        <option value="on" selected="@(Model.ThemSachDto.TrangThai == "on" ? "selected" : null)">ON</option>
                        <option value="off" selected="@(Model.ThemSachDto.TrangThai == "off" ? "selected" : null)">OFF</option>
                    </select>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.NgonNgu" class="form-label">Ngôn ngữ</label>
                    <input asp-for="ThemSachDto.NgonNgu" class="form-control rounded-3" required value="@Model.ThemSachDto.NgonNgu" />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.KichThuoc" class="form-label">Kích thước</label>
                    <input asp-for="ThemSachDto.KichThuoc" class="form-control rounded-3" required value="@Model.ThemSachDto.KichThuoc" />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.TrongLuong" class="form-label">Trọng lượng</label>
                    <input asp-for="ThemSachDto.TrongLuong" class="form-control rounded-3" required value="@Model.ThemSachDto.TrongLuong" />
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.SoTrang" class="form-label">Số trang</label>
                    <input asp-for="ThemSachDto.SoTrang" class="form-control rounded-3" required value="@Model.ThemSachDto.SoTrang" />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.HinhThuc" class="form-label">Hình thức</label>
                    <select asp-for="ThemSachDto.HinhThuc" class="form-select rounded-3" required>                        
                        <option value="Bìa mềm">Bìa mềm</option>
                        <option value="Bìa cứng">Bìa cứng</option>
                        <option value="Bìa mềm" selected="@(Model.ThemSachDto.HinhThuc == "Bìa mềm" ? "selected" : null)">Bìa mềm</option>
                        <option value="Bìa cứng" selected="@(Model.ThemSachDto.HinhThuc == "Bìa cứng" ? "selected" : null)">Bìa cứng</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.DoTuoi" class="form-label">Độ tuổi</label>
                    <select asp-for="ThemSachDto.DoTuoi" class="form-select rounded-3" required>
                        <option value="1-5" selected="@(Model.ThemSachDto.DoTuoi == "1-5" ? "selected" : null)">1-5</option>
                        <option value="6-10" selected="@(Model.ThemSachDto.DoTuoi == "6-10" ? "selected" : null)">6-10</option>
                        <option value="11-15" selected="@(Model.ThemSachDto.DoTuoi == "11-15" ? "selected" : null)">11-15</option>
                        <option value="16-18" selected="@(Model.ThemSachDto.DoTuoi == "16-18" ? "selected" : null)">16-18</option>
                        <option value="18+" selected="@(Model.ThemSachDto.DoTuoi == "18+" ? "selected" : null)">18+</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <label class="form-label">Thể Loại</label>
                <ul class="row list-unstyled">
                    @{
                        List<int> TheLoaiSach = Model.ThemSachDto.ListTheLoai
                                            .Split(',', StringSplitOptions.RemoveEmptyEntries)       // Tách theo dấu phẩy
                                            .Select(x => int.Parse(x.Trim()))                        // Ép kiểu từng phần tử sang int
                                            .ToList();
                    }
                    @foreach (var item in Model.TheLoais)
                    {
                        <li class="col-md-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="TheLoaiDuocChon" value="@item.MaTheLoai"
                                @(TheLoaiSach.Contains(item.MaTheLoai) ? "checked" : "") />
                                <label class="form-check-label">@item.TenTheLoai</label>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="row">
                <label asp-for="ThemSachDto.MoTa" class="form-label">Mô Tả</label>
                <textarea asp-for="ThemSachDto.MoTa" class="form-control" required>@Model.ThemSachDto.MoTa</textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary px-5">➕ Cập nhật thông tin sách</button>
            </div>
        </form>
    </div>

</body>
</html>
