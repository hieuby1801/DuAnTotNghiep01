@model DATN_MVC.Models.Modeltong

@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
<section class="stats">
    <div class="stat-card">
        <h3>📚 Tổng số sách</h3>
        <p>0</p>
    </div>
    <div class="stat-card">
        <h3>👥 Người dùng</h3>
        <p>0</p>
    </div>
    <div class="stat-card">
        <h3>🛒 Đơn hàng</h3>
        <p>98</p>
    </div>
    <div class="stat-card">
        <h3>💰 Doanh thu</h3>
        <p>25,000,000đ</p>
    </div>
</section>
<section class="table-section">
    <div class="section-header">
        <h2>📘 Danh sách Sách</h2>
        <button class="btn btn-primary mb-3" onclick="toggleForm()">
            <i class="bi bi-plus-circle"></i> Thêm sách
        </button>
    </div>

    <div id="themSachContainer" class="d-none">
        <form method="post" enctype="multipart/form-data">
            <!-- Form thêm sách nằm ở đây -->
            <!-- Bỏ Razor PartialView -->
        </form>
    </div>

    <table>
        <thead>
            <tr>
                <th>Mã sách</th>
                <th>Tên sách</th>
                <th>Tác giả</th>
               
                <th>Hình ảnh</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            <!-- Dữ liệu sách mẫu -->
            @foreach (var item in Model.Saches)
            {
                <tr>
                    <td>@item.MaSach</td>
                    <td>@item.TenSach</td>
                    <td>@item.TacGia</td>                    
                    <td>
                        <img src="@Url.Content(item.HinhAnh)" alt="Ảnh sách" width="100" height="150" />
                    </td>
                    <td>
                        <a href="#" class="btn btn-sm btn-warning">Sửa</a>
                        <button class="delete-btn">Xóa</button>
                    </td>              
            </tr>
            }
        </tbody>
    </table>
</section>