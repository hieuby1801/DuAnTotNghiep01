@model DATN_MVC.Models.Modeltong
@{
    Layout = "~/Views/Shared/Admin.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Thêm Sách Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
            margin-top: 60px;
        }

        .form-label {
            font-weight: 500;
        }

        h2 {
            font-weight: bold;
            color: #343a40;
            margin-bottom: 30px;
            text-align: center;
        }

        .btn-primary {
            border-radius: 10px;
            padding: 10px 25px;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>📚 Thêm Sách Mới</h2>
        <form asp-action="ThemSach" asp-controller="Admin" method="post" enctype="multipart/form-data">
            <div class="row mb-4">
                <div class="col-md-2">
                    <label asp-for="ThemSachDto.MaSach" class="form-label">Mã sách</label>
                    <input asp-for="ThemSachDto.MaSach" class="form-control rounded-3" required />
                </div>
                <div class="col-md-6">
                    <label asp-for="ThemSachDto.TenSach" class="form-label">Tên sách</label>
                    <input asp-for="ThemSachDto.TenSach" class="form-control rounded-3" required />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.TacGia" class="form-label">Tác giả</label>
                    <input asp-for="ThemSachDto.TacGia" class="form-control rounded-3" required />
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-8">
                    <label class="form-label">Hình Ảnh</label>
                    <input class="form-control rounded-3" type="file" name="HinhAnhFile" accept="image/*" required />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.TrangThai" class="form-label">Trạng thái</label>
                    <select asp-for="ThemSachDto.TrangThai" class="form-select rounded-3" required>
                        <option value="on">ON</option>
                        <option value="off">OFF</option>
                    </select>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.NgonNgu" class="form-label">Ngôn ngữ</label>
                    <input asp-for="ThemSachDto.NgonNgu" class="form-control rounded-3" required />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.KichThuoc" class="form-label">Kích thước</label>
                    <input asp-for="ThemSachDto.KichThuoc" class="form-control rounded-3" required />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.TrongLuong" class="form-label">Trọng lượng</label>
                    <input asp-for="ThemSachDto.TrongLuong" class="form-control rounded-3" required />
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.SoTrang" class="form-label">Số trang</label>
                    <input asp-for="ThemSachDto.SoTrang" class="form-control rounded-3" required />
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.HinhThuc" class="form-label">Hình thức</label>
                    <select asp-for="ThemSachDto.HinhThuc" class="form-select rounded-3" required>
                        <option value="">-- Chọn Hình Thức --</option>
                        <option value="Bìa mềm">Bìa mềm</option>
                        <option value="Bìa cứng">Bìa cứng</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label asp-for="ThemSachDto.DoTuoi" class="form-label">Độ tuổi</label>
                    <select asp-for="ThemSachDto.DoTuoi" class="form-select rounded-3" required>
                        <option value="">-- Chọn độ tuổi --</option>
                        <option value="1-5">1-5</option>
                        <option value="6-10">6-10</option>
                        <option value="11-15">11-15</option>
                        <option value="16-18">16-18</option>
                        <option value="18+">18+</option>
                    </select>
                </div>
            </div>

            <div class="row">
                <label class="form-label">Thể Loại</label>
                <ul class="row list-unstyled">
                    @foreach (var item in Model.TheLoais)
                    {
                        <li class="col-md-4">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="TheLoaiDuocChon" value="@item.MaTheLoai" />
                                <label class="form-check-label">@item.TenTheLoai</label>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="row">
                <label asp-for="ThemSachDto.MoTa" class="form-label">Mô Tả</label>
                <textarea asp-for="ThemSachDto.MoTa" class="form-control" required></textarea>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary px-5">➕ Thêm Sách</button>
            </div>
        </form>
    </div>

</body>
</html>
