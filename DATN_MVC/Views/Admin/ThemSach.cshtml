@model DATN_MVC.Models.Modeltong

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Thêm Sách Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to right, #f8f9fa, #e9ecef);
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            background-color: white;
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            max-width: 800px;
            margin: auto;
            margin-top: 60px;
        }

        .form-label {
            font-weight: 500;
        }

        h2 {
            font-weight: bold;
            color: #343a40;
            margin-bottom: 30px;
            text-align: center;
        }

        .btn-primary {
            border-radius: 10px;
            padding: 10px 25px;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>📚 Thêm Sách Mới</h2>
        <form action="/them-sach" method="post" enctype="multipart/form-data">
            <div class="row mb-4">
                <div class="col-md-2">
                    <label for="MaSach" class="form-label">Mã Sách</label>
                    <input type="number" class="form-control rounded-3" id="MaSach" name="MaSach" required>
                </div>
                <div class="col-md-6">
                    <label for="TenSach" class="form-label">Tên Sách</label>
                    <input type="text" class="form-control rounded-3" id="TenSach" name="TenSach" required>
                </div>
                <div class="col-md-4">
                    <label for="TacGia" class="form-label">Tác Giả</label>
                    <input type="text" class="form-control rounded-3" id="TacGia" name="TacGia" required>
                </div>
            </div>

            <div class="row mb-4">
                <div class="col-md-8">
                    <label for="HinhAnh" class="form-label">Hình Ảnh</label>
                    <input type="file" class="form-control rounded-3" id="HinhAnh" name="HinhAnh" accept="image/*" required>
                </div>
                <div class="col-md-4">
                    <label for="TrangThai" class="form-label">Trạng Thái</label>
                    <select class="form-select rounded-3" id="TrangThai" name="TrangThai" required>
                        <option value="on">ON</option>
                        <option value="off">OFF</option>
                    </select>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary px-5">➕ Thêm Sách</button>
            </div>
        </form>
    </div>

</body>
</html>
