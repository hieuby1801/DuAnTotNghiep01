@model DATN_MVC.Models.Modeltong
@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Nhập Lô Hàng Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f0f2f5, #e0e0e0);
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            max-width: 950px;
            margin: 60px auto;
        }

        h2 {
            font-weight: bold;
            color: #212529;
            margin-bottom: 35px;
            text-align: center;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
        }

        .form-control,
        .form-select {
            border-radius: 12px;
            transition: all 0.2s ease;
        }

            .form-control:focus,
            .form-select:focus {
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.2);
                border-color: #86b7fe;
            }

        .btn-primary {
            border-radius: 12px;
            padding: 12px 35px;
            font-size: 16px;
            font-weight: 500;
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 5px;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="row g-4">
            <h2>Thông Tin Lô Hàng</h2>
            <div class="col-md-2">
                <label class="form-label">Mã lô</label>
                <input type="text" class="form-control" value="@Model.LoHang.MaLo" readonly />
            </div>
            <div class="col-md-2">
                <label class="form-label">Ngày nhập</label>
                <input class="form-control" value="@Model.LoHang.NgayNhap" readonly />
            </div>
            <div class="col-md-4">
                <label class="form-label">Nhà Cung Cấp</label>
                <input type="text" class="form-control" value="@Model.LoHang.MaNhaCungCap" readonly />
            </div>
            <div class="col-md-4">
                <label class="form-label">Tổng giá trị Lô Hàng</label>
                <input type="number" class="form-control" value="@Model.LoHang.GiaTienLoHang" readonly />
            </div>
        </div>
        
        <table>
            <thead>
                <tr>
                    <th>Mã Sách</th>
                    <th>Số Lượng</th>
                    <th>Giá Nhập</th>
                    <th>Nhà Xuất Bản</th>
                    </tr>
            </thead>
            <tbody>

                @foreach (var item in Model.chiTietLoHangs)
                {
                    <tr>
                        <td>@item.MaSach</td>
                        <td>@item.SoLuongNhap</td>
                        <td>@item.GiaNhap</td>                        
                        <td>@item.NhaXuatBan</td>                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

