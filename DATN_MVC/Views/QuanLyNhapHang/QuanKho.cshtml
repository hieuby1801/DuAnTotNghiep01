@model DATN_MVC.Models.Modeltong
@{
    Layout = "~/Views/Shared/Admin.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Quản kho</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f0f2f5, #e0e0e0);
            font-family: 'Segoe UI', sans-serif;
        }

        .form-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
            max-width: 950px;
            margin: 60px auto;
        }

        h2 {
            font-weight: bold;
            color: #212529;
            margin-bottom: 35px;
            text-align: center;
        }

        .form-label {
            font-weight: 500;
            color: #495057;
        }

        .form-control,
        .form-select {
            border-radius: 12px;
            transition: all 0.2s ease;
        }

            .form-control:focus,
            .form-select:focus {
                box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.2);
                border-color: #86b7fe;
            }

        .btn-primary {
            border-radius: 12px;
            padding: 12px 35px;
            font-size: 16px;
            font-weight: 500;
        }

        .text-danger {
            font-size: 0.875rem;
            margin-top: 5px;
        }
    </style>
</head>
<body>

    <div class="form-container">
        <h2>Phiếu Nhập Kho</h2>

        <form action="#" method="post" class="row g-4">

            <div class="col-md-6">
                <label asp-for="ThemSachDto.MaSach" class="form-label">Mã sách</label>
                <input asp-for="ThemSachDto.MaSach" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label for="maLo" class="form-label">Mã lô</label>
                <input type="text" id="maLo" name="maLo" class="form-control" required />
                <div id="maLo-error" class="text-danger"></div>
            </div>

            <div class="col-md-6">
                <label class="form-label">Nhà Xuất Bản</label>
                <select class="form-select" required>
                    <option value="">-- Chọn NXB --</option>
                    <option>Kim Đồng</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Nhà Cung Cấp</label>
                <select class="form-select" required>
                    <option value="">-- Chọn NCC --</option>
                    <option>Kim Đồng</option>
                </select>
            </div>

            <div class="col-md-6">
                <label class="form-label">Ngày nhập</label>
                <input type="date" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label for="soLuong" class="form-label">Số Lượng Nhập</label>
                <input id="soLuong" name="soLuong" type="number" class="form-control" required />
            </div>

            <div class="col-md-6">
                <label for="giaNhap" class="form-label">Giá nhập</label>
                <input id="giaNhap" name="giaNhap" type="number" step="0.01" class="form-control" required />
            </div>

            <div class="col-12 text-center mt-3">
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>

        </form>
    </div>

    <script>
        document.querySelector('form').addEventListener('submit', function (event) {
            const maLo = document.getElementById('maLo');
            const errorDiv = document.getElementById('maLo-error');
            let isValid = true;

            if (maLo.value.trim() === '') {
                errorDiv.textContent = 'Mã lô không được để trống.';
                isValid = false;
            } else {
                errorDiv.textContent = '';
            }

            if (!isValid) {
                event.preventDefault();
            }
        });
    </script>

</body>
</html>
