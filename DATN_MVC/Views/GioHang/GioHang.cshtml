@{
	ViewData["Title"] = "LaySach";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Giỏ Hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
        }

        .card h6,
        h6 {
            font-size: 15px;
        }

        .btn-outline-primary {
            border-radius: 999px;
        }

        .btn-danger {
            border-radius: 999px;
        }

        .rounded-4 {
            border-radius: 1rem !important;
        }

        .shadow-sm {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important;
        }

    </style>
</head>
<body class="bg-light" style="font-family: 'Roboto', sans-serif;">
    <div class="container py-4">
        <h4 class="mb-4 fw-bold">🛒 GIỎ HÀNG <span class="text-muted fs-6">(1 sản phẩm)</span></h4>
        <div class="row g-4">
            <!-- Cột trái: Sản phẩm -->
            <div class="col-lg-8">
                <div class="bg-white rounded-4 p-3 shadow-sm border">
                    <div class="d-flex align-items-center mb-3">
                        <input class="form-check-input me-2" type="checkbox" checked>
                        <label class="form-check-label fw-semibold">Chọn tất cả (1 sản phẩm)</label>
                    </div>

                    <!-- Sản phẩm -->
                    <div class="d-flex align-items-start border-top pt-3">
                        <input class="form-check-input mt-2 me-3" type="checkbox" checked>
                        <img src="https://salt.tikicdn.com/cache/280x280/ts/product/46/5e/b1/36d4d0de5868a09883cf5eb2e7c0b40b.jpg" class="me-3 rounded-3" width="80" alt="Sách Excel">
                        <div class="flex-grow-1">
                            <h6 class="mb-1 fw-medium">Excel Ứng Dụng Văn Phòng - Từ Cơ Bản Đến Nâng Cao (Tái Bản 2023)</h6>
                            <div class="d-flex align-items-center mt-2">
                                <button class="btn btn-sm btn-outline-secondary rounded-circle">−</button>
                                <span class="mx-2">1</span>
                                <button class="btn btn-sm btn-outline-secondary rounded-circle">+</button>
                            </div>
                        </div>
                        <div class="text-end ms-3">
                            <div class="text-danger fw-bold fs-6">158.400 đ</div>
                            <div class="text-muted text-decoration-line-through small">198.000 đ</div>
                            <button class="btn btn-sm btn-light mt-2 text-danger" title="Xóa">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5.5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6zm2.5-.5a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5z" />
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1h-11a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h3.5a1 1 0 0 1 .96.74h3.08a1 1 0 0 1 .96-.74H14a1 1 0 0 1 1 1v1zM1 2a.5.5 0 0 0-.5.5V3a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-.5A.5.5 0 0 0 14 2H1z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Cột phải: Thanh toán -->
            <div class="col-lg-4">
                <!-- Khuyến mãi -->
                <div class="bg-white rounded-4 p-3 shadow-sm border mb-3">
                    <h6 class="fw-bold text-primary">🎁 Mã Giảm 25K - Toàn Sàn</h6>
                    <p class="mb-1 small text-muted">Đơn hàng từ 280k - Không bao gồm giá trị sản phẩm Manga...</p>
                    <div class="small text-muted mb-2">HSD: 30/04/2025</div>
                    <div class="progress mb-2" style="height: 8px;">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 56%;"></div>
                    </div>
                    <button class="btn btn-outline-primary btn-sm rounded-pill">Mua thêm</button>
                </div>

                <!-- Nhận quà -->
                <div class="bg-white rounded-4 p-3 shadow-sm border mb-3 d-flex justify-content-between align-items-center">
                    <strong>🎁 Nhận quà</strong>
                    <a href="#" class="text-decoration-none">Chọn quà &gt;</a>
                </div>

                <!-- Tổng tiền -->
                <div class="bg-white rounded-4 p-3 shadow-sm border">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Thành tiền</span>
                        <strong>158.400 đ</strong>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <strong class="fs-6">Tổng Số Tiền (gồm VAT)</strong>
                        <strong class="fs-5 text-danger">158.400 đ</strong>
                    </div>
                    <button class="btn btn-danger w-100 fw-bold rounded-pill">THANH TOÁN</button>
                    <div class="text-center text-muted small mt-2">(Giảm giá trên web chỉ áp dụng cho bán lẻ)</div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
