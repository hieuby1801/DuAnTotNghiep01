@model DATN_MVC.Models.Modeltong
@{
    ViewData["Title"] = "LaySach";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi Tiết Sản Phẩm - Trường Ca Achilles</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-img-thumb:hover {
            border: 2px solid #007bff;
        }

        .product-title {
            font-size: 24px;
            font-weight: bold;
        }

        .price-old {
            text-decoration: line-through;
            color: gray;
        }

        .discount-badge {
            color: white;
            background-color: red;
            padding: 2px 5px;
            border-radius: 4px;
            font-size: 14px;
        }

        .product-info-box {
            border: 1px solid #dee2e6;
            padding: 15px;
            border-radius: 8px;
            background-color: #fff;
        }
    </style>
</head>
<body class="bg-light">
    <div class="container py-4">
        <div class="row">
            <!-- Hình ảnh sản phẩm -->
            <div class="col-md-4">
            
                   
                <img src="https://cdn0.fahasa.com/media/catalog/product/t/r/truong_ca_achilles_1_2022_bia_1.jpg" alt="Trường Ca Achilles" class="img-fluid border mb-2">

                <img src="@Url.Content(Model.sachDTOs.HinhAnh)" alt="Trường Ca Achilles" class="img-fluid border mb-2">

                <div class="d-flex gap-2">
                    <img src="https://cdn0.fahasa.com/media/catalog/product/t/r/truong_ca_achilles_1_2022_bia_1.jpg" class="img-thumbnail product-img-thumb" style="width: 60px;">
                    <img src="https://cdn0.fahasa.com/media/catalog/product/t/r/truong_ca_achilles_1_2022_bia_1.jpg" class="img-thumbnail product-img-thumb" style="width: 60px;">
                    <div class="bg-secondary text-white d-flex align-items-center justify-content-center" style="width: 60px; height: 80px;">+1</div>
                </div>
                <div class="mt-3 d-flex gap-2">
                    <button class="btn btn-outline-danger flex-fill">Thêm vào giỏ hàng</button>
                    <button class="btn btn-danger flex-fill">Mua ngay</button>
                </div>
            </div>

            <!-- Thông tin sản phẩm -->
            <div class="col-md-8">

                <div class="product-info-box">  
                <span class="text-danger">Xu hướng</span>
                <h2 class="product-title">@Model.sachDTOs.TenSach</h2>
                    <p class="mb-1">Nhà cung cấp:@Model.sachDTOs.TenNhaCungCap <a href="#">Nhà Xuất Bản: @Model.sachDTOs.NhaXuatBan</a></p>
                <p class="mb-1">Tác giả:@Model.sachDTOs.TacGia</p>
                <p class="mb-1">Nhà xuất bản:@Model.sachDTOs.NhaXuatBan</p>
                <p class="mb-1">Hình thức bìa: @Model.sachDTOs.HinhThuc</p>
                <div class="d-flex align-items-center mb-2">    
                    <span class="price-old me-2">@Model.sachDTOs.GiaBan ₫</span>


                </div>

                <div class="bg-white p-3 rounded shadow-sm mb-3 mt-3">
                    <h5>Thông tin vận chuyển</h5>
                    <p class="mb-0">Giao hàng đến: <strong>Phường Bến Nghé, Quận 1, Hồ Chí Minh</strong> <a href="#">Thay đổi</a></p>
                    <p class="mb-0">Giao hàng tiêu chuẩn - Dự kiến giao <strong>Thứ bảy - 12/04</strong></p>
                </div>

                <div class="bg-white p-3 rounded shadow-sm mb-3">
                    <h5>Thông tin chi tiết</h5>
                    <table class="table table-sm">
                        <tr><th>Mã hàng</th><td>@Model.sachDTOs.MaSach</td></tr>
                        <tr><th>Nhà Cung Cấp</th><td>@Model.sachDTOs.TenNhaCungCap </td></tr>
                        <tr><th>Tác giả</th><td>@Model.sachDTOs.TacGia</td></tr>
                        <tr><th>NXB</th><td>NXB: @Model.sachDTOs.NhaXuatBan</td></tr>
                        <tr><th>Năm XB</th><td>2020</td></tr>
                        <tr><th>Trọng lượng (g)</th><td>@Model.sachDTOs.TrongLuong</td></tr>
                        <tr><th>Kích Thước Bao Bì</th><td>22.5 x 14 cm</td></tr>
                        <tr><th>Số trang</th><td>@Model.sachDTOs.SoTrang</td></tr>
                        <tr><th>Hình thức</th><td>@Model.sachDTOs.HinhThuc</td></tr>
                    </table>
                </div>
                <div class="bg-white p-3 rounded shadow-sm mb-3 mt-3">
                    <h5>Mô Tả</h5>
                    <p>@Model.sachDTOs.MoTa</p>
                  
                </div>

                <div class="text-muted small">
                    <p><strong>Chính sách:</strong></p>
                    <ul>
                        <li>Thời gian giao hàng: Giao nhanh và uy tín</li>
                        <li>Chính sách đổi trả: Đổi trả miễn phí toàn quốc</li>
                        <li>Ưu đãi khi mua số lượng lớn</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    </div>
</body>
</html>
