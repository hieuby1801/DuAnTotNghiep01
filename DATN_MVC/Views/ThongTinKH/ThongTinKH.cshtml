@model DATN_MVC.Models.Modeltong
@{
    ViewData["Title"] = "ThongTinKhachHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thông tin khách hàng</title>
    <link rel="stylesheet" href="styles.css">
    <style>
        /* Giữ lại style cơ bản giống trang đơn hàng */
        :root {
            --primary-color: #e74c3c;
            --secondary-color: #3498db;
            --bg-light: #f5f5f5;
            --bg-white: #ffffff;
            --text-dark: #333;
            --border-color: #ddd;
            --badge-bg: #e74c3c;
            --badge-text: #fff;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Arial", sans-serif;
        }

        body {
            background: var(--bg-light);
            color: var(--text-dark);
        }

        .customer-page .container {
            display: flex;
            min-height: 100vh;
        }

        .sidebar {
            width: 280px;
            background: var(--bg-white);
            padding: 20px;
            border-right: 1px solid var(--border-color);
        }

        .profile {
            text-align: center;
            margin-bottom: 30px;
        }

        .avatar {
            width: 80px;
            height: 80px;
            background: var(--border-color);
            border-radius: 50%;
            margin: 0 auto 10px;
        }

        .profile h2 {
            font-size: 18px;
            margin-bottom: 5px;
        }

        .rank {
            background: #ccc;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 13px;
            margin-bottom: 5px;
            display: inline-block;
        }

        .menu ul {
            list-style: none;
        }

        .menu li {
            padding: 12px 8px;
            cursor: pointer;
            transition: 0.3s;
            font-size: 14px;
        }

            .menu li.active,
            .menu li:hover {
                color: var(--primary-color);
                font-weight: bold;
            }

        .badge {
            background: var(--badge-bg);
            color: var(--badge-text);
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 11px;
            margin-left: 6px;
        }

        .main-content {
            flex-grow: 1;
            padding: 30px;
        }

        .info-header {
            background: var(--bg-white);
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 25px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        }

            .info-header h1 {
                font-size: 22px;
                margin-bottom: 15px;
            }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 6px;
            font-weight: bold;
            font-size: 14px;
        }

        input[type="text"],
        input[type="email"],
        input[type="date"] {
            width: 100%;
            padding: 10px;
            border: 1px solid var(--border-color);
            border-radius: 6px;
            font-size: 14px;
        }

        .gender-group {
            display: flex;
            align-items: center;
            gap: 20px;
        }

            .gender-group label {
                font-weight: normal;
            }

        .save-btn {
            background: var(--primary-color);
            color: var(--badge-text);
            padding: 12px 30px;
            border: none;
            border-radius: 6px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s;
        }

            .save-btn:hover {
                background: #c0392b;
            }
    </style>
</head>
<body>
    <div class="customer-page">
        <div class="container">
            <aside class="sidebar">
                <div class="profile">
                    <div class="avatar"></div>
                    @Html.Partial("TTGT", Model)
                    <p class="rank">Thành viên Bạc</p>                    
                </div>
                <nav class="menu">
                    <ul>
                        <li class="active">Thông tin tài khoản</li>
                        <li><a href="@Url.Action("ThongTinDH", "ThongTinKH")">Đơn hàng của tôi</a></li>

                        <li>Ví voucher <span class="badge">17</span></li>
                        <li>Tài Khoản F-Point / Freeship</li>
                        <li>Thông Báo</li>
                        <li>Sản phẩm yêu thích</li>
                        <li>Sách theo bộ</li>
                        <li>Nhận xét của tôi</li>
                    </ul>
                </nav>
            </aside>

            <main class="main-content">
                <div class="info-header">
                    <h1>Thông tin cá nhân</h1>
                    <form>
                        @if(Model.NguoiDung != null)
						{
							
						
                     
                        <div class="form-group">
                            <label>Số điện thoại</label>
                                <input type="text" value="@Model.NguoiDung?.SoDienThoai" />
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                                <input type="email" value="@Model.NguoiDung?.Email" />
                        </div>
                        <div class="form-group">
                            <label>Giới tính</label>
                            <div class="gender-group">
                                <label><input type="radio" name="gender" checked> Nam</label>
                                <label><input type="radio" name="gender"> Nữ</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Ngày sinh</label>
                                @if (Model.NguoiDung?.NgaySinh == null)
                                {
                                    <input type="date" disabled />
                                }
                                else
                                {
                                    <input type="date" value="@Model.NguoiDung?.NgaySinh?.ToString("yyyy-MM-dd")" />
                                }
                       </div>
                        <button type="submit" class="save-btn">Lưu thay đổi</button>
                        }
						else
						{
							<p>Không có thông tin người dùng.</p>
						}
                    </form>
                </div>
            </main>
        </div>
    </div>
</body>
</html>
